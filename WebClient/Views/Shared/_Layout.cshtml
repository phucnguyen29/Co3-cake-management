<!DOCTYPE html>
<html lang="en">
@if (Context.Request.Cookies["Username"] == null &&
        !(ViewContext.RouteData.Values["controller"]?.ToString() == "Auth"))
{
    <script> window.location.href = "/Auth/Login"; </script>
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <style>
        body {
            margin: 0;
            padding: 0;
            background: #CFFFD2; /* pastel xanh giống login */
            font-family: 'Segoe UI', sans-serif;
        }

        /* HEADER */
        .app-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 12px 16px;
            background: #3aa66b;
            color: white;
            font-weight: bold;
            border-bottom-left-radius: 14px;
            border-bottom-right-radius: 14px;
            box-shadow: 0 3px 8px rgba(0, 0, 0, 0.12);
        }

        .header-title {
            font-size: 1.2rem;
            font-weight: 700;
        }

        .header-right {
            text-align: right;
            font-size: 0.9rem;
        }

        .logout-btn {
            color: white;
            font-weight: 600;
            padding: 4px 10px;
            border-radius: 8px;
            border: none;
            margin-top: 4px;
        }

        /* MAIN CONTENT */
        .content {
            padding: 20px;
            padding-bottom: 100px;
        }

        .create-btn {
            display: inline-block;
            padding: 10px 16px;
            background: #3aa66b;
            color: white;
            border-radius: 10px;
            font-weight: 600;
            text-decoration: none;
            margin-bottom: 15px;
        }

        .order-card {
            background: white;
            padding: 18px;
            border-radius: 16px;
            margin-bottom: 15px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.12);
            border-left: 6px solid #3aa66b;
        }

        .order-title {
            font-weight: bold;
            color: #2b6e45;
            margin-bottom: 8px;
        }

        .order-row {
            margin-bottom: 8px;
        }

        .order-label {
            font-weight: 600;
            color: #11693b;
        }

        .order-value {
            display: block;
            margin-left: 6px;
            color: #333;
        }

        .card-actions {
            margin-top: 10px;
            display: flex;
            gap: 12px;
        }

            .card-actions a {
                text-decoration: none;
                font-weight: 600;
                padding: 6px 10px;
                border-radius: 8px;
                color: white;
            }

        .btn-edit {
            background: #3aa66b;
        }

        .btn-details {
            background: #2a8dbd;
        }

        .btn-delete {
            background: #d9534f;
        }

        .logout-btn {
            background: #d9534f;
        }
    </style>
</head>

<body>

    <!-- HEADER -->
    <div class="app-header">
        <div class="header-title">App Đặt Bánh Cô 3</div>

        <div class="header-right">
            <form asp-controller="Auth" asp-action="Logout" method="post">
                @Html.AntiForgeryToken()
                <button class="logout-btn">Đăng Xuất</button>
            </form>
        </div>
    </div>

    <!-- BODY -->
    <div class="content">
        @RenderBody()
    </div>
</body>
</html>
